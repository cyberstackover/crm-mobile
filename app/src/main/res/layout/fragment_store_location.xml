<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/bg_main"
             tools:context="com.sinergiinformatika.sisicrm.fragments.StoreLocationFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_main"
            android:orientation="horizontal">

            <TextView
                style="@style/TextPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="@dimen/content_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/content_vertical_margin"
                android:text="@string/label_store_location"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_card"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <AutoCompleteTextView
                    android:id="@+id/store_edit_province"
                    style="@style/TextPrimary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/label_province"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:singleLine="true"/>

                <TextView
                    style="@style/TextRed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_asterisk"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <AutoCompleteTextView
                    android:id="@+id/store_edit_city"
                    style="@style/TextPrimary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/label_city"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:singleLine="true"/>

                <TextView
                    style="@style/TextRed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_asterisk"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <AutoCompleteTextView
                    android:id="@+id/store_edit_subdistrict"
                    style="@style/TextPrimary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/label_subdistrict"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:singleLine="true"/>

                <TextView
                    style="@style/TextRed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_asterisk"/>
            </LinearLayout>

            <!--<EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_province"
                android:id="@+id/store_edit_province"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:singleLine="true"
                android:inputType="textCapWords"
                style="@style/TextPrimary" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_city"
                android:id="@+id/store_edit_city"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:singleLine="true"
                android:inputType="textCapWords"
                style="@style/TextPrimary" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_subdistrict"
                android:id="@+id/store_edit_subdistrict"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:singleLine="true"
                android:inputType="textCapWords"
                style="@style/TextPrimary" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/store_edit_address"
                    style="@style/TextPrimary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/label_address"
                    android:inputType="textCapWords"
                    android:paddingTop="@dimen/activity_vertical_margin"/>

                <TextView
                    style="@style/TextRed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_asterisk"/>
            </LinearLayout>

            <EditText
                android:id="@+id/store_edit_zipcode"
                style="@style/TextPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_zip_code"
                android:inputType="number"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:singleLine="true"
                android:textIsSelectable="false"/>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
