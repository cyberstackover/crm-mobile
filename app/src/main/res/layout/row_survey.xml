<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_card"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/content_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/content_vertical_margin">

        <TextView
            android:id="@+id/row_survey_date"
            style="@style/TextSecondary.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="@dimen/content_vertical_margin_smaller_even"
            android:paddingTop="@dimen/content_vertical_margin_smaller_even"
            android:text="@string/hello_world" />

        <TextView
            android:id="@+id/row_survey_time"
            style="@style/TextSecondary.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingBottom="@dimen/content_vertical_margin_smaller_even"
            android:paddingTop="@dimen/content_vertical_margin_smaller_even"
            android:text="@string/hello_world" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/row_survey_date"
            android:layout_toStartOf="@+id/row_survey_date"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/row_survey_store_name"
                    style="@style/TextPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/content_horizontal_margin_smaller"
                    android:layout_marginRight="@dimen/content_horizontal_margin_smaller"
                    android:ellipsize="marquee"
                    android:paddingBottom="@dimen/content_vertical_margin_smaller_even"
                    android:paddingTop="@dimen/content_vertical_margin_smaller_even"
                    android:text="@string/hello_world"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/row_survey_store_priority"
                    style="@style/TextPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="@string/icon_bookmark" />

                <TextView
                    android:id="@+id/row_survey_list_icon"
                    style="@style/TextSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/content_horizontal_margin_smaller"
                    android:layout_marginRight="@dimen/content_horizontal_margin_smaller"
                    android:text="@string/icon_list" />

                <TextView
                    android:id="@+id/row_survey_image_icon"
                    style="@style/TextSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/content_horizontal_margin_smaller"
                    android:layout_marginRight="@dimen/content_horizontal_margin_smaller"
                    android:text="@string/icon_camera" />

                <TextView
                    android:id="@+id/row_survey_comment_icon"
                    style="@style/TextSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/content_horizontal_margin_smaller"
                    android:layout_marginRight="@dimen/content_horizontal_margin_smaller"
                    android:text="@string/icon_comment" />

            </LinearLayout>

            <TextView
                android:id="@+id/row_survey_store_address"
                style="@style/TextSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:paddingBottom="@dimen/content_vertical_margin_smaller_even"
                android:paddingTop="@dimen/content_vertical_margin_smaller_even"
                android:text="@string/hello_world" />

            <TextView
                android:id="@+id/row_survey_store_city"
                style="@style/TextSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:paddingBottom="@dimen/content_vertical_margin_smaller_even"
                android:paddingTop="@dimen/content_vertical_margin_smaller_even"
                android:text="@string/hello_world" />

            <TextView
                android:id="@+id/row_survey_store_cp"
                style="@style/TextSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:paddingBottom="@dimen/content_vertical_margin_smaller_even"
                android:paddingTop="@dimen/content_vertical_margin_smaller_even"
                android:text="@string/hello_world" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/row_survey_time"
            android:layout_toStartOf="@+id/row_survey_time"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/row_survey_fave"
                style="@style/TextSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_heart" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/row_survey_priority"
                style="@style/TextSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_star_empty" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/row_survey_check_box"
                style="@style/TextSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_check_box_empty" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:src="@color/stroke_card" />

</LinearLayout>