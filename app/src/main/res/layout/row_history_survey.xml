<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_card"
              android:orientation="vertical">

    <TextView
        android:id="@+id/row_history_data_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <include
        android:id="@+id/row_list_header"
        layout="@layout/row_item_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/content_vertical_margin_smaller"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/content_vertical_margin_smaller">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/row_history_store_name"
                    style="@style/TextPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/content_horizontal_margin"
                    android:layout_marginRight="@dimen/content_horizontal_margin"
                    android:paddingBottom="@dimen/content_vertical_margin_smaller_even"
                    android:paddingTop="@dimen/content_vertical_margin_smaller_even"
                    android:text="@string/hello_world"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/history_store_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_bookmark"/>

            </LinearLayout>

            <TextView
                android:id="@+id/history_store_address"
                style="@style/TextPrimary.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/content_vertical_margin_smaller_even"
                android:paddingTop="@dimen/content_vertical_margin_smaller_even"
                android:text="@string/hello_world"/>

        </LinearLayout>

        <Button
            android:id="@+id/history_action_button"
            style="@style/Button.Transparent.Gray"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/content_horizontal_margin"
            android:layout_marginStart="@dimen/content_horizontal_margin"
            android:onClick="showSurveyPopup"
            android:text="@string/icon_ellipsis_v"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:contentDescription="@string/text_divider"
        android:src="@color/stroke_card"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/content_vertical_margin_smaller"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/content_vertical_margin_smaller">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/history_survey_price_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/content_horizontal_margin_smaller"
                    android:layout_marginRight="@dimen/content_horizontal_margin_smaller"
                    android:text="@string/icon_list"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/content_horizontal_margin_smaller"
                    android:layout_marginRight="@dimen/content_horizontal_margin_smaller"
                    android:text="@string/title_survey_price"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/history_survey_price_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_circle_o"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/content_horizontal_margin_smaller"
                    android:layout_marginRight="@dimen/content_horizontal_margin_smaller"
                    android:text="@string/icon_image"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/content_horizontal_margin_smaller"
                    android:layout_marginRight="@dimen/content_horizontal_margin_smaller"
                    android:text="@string/label_photo"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/history_survey_image_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_circle_o"/>
            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/history_survey_complain_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/content_horizontal_margin_smaller"
                    android:layout_marginRight="@dimen/content_horizontal_margin_smaller"
                    android:text="@string/icon_comment"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/content_horizontal_margin_smaller"
                    android:layout_marginRight="@dimen/content_horizontal_margin_smaller"
                    android:text="@string/label_complains"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/history_survey_complain_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_circle_o"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/history_survey_program_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/content_horizontal_margin_smaller"
                    android:layout_marginRight="@dimen/content_horizontal_margin_smaller"
                    android:text="@string/icon_user_secret"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/content_horizontal_margin_smaller"
                    android:layout_marginRight="@dimen/content_horizontal_margin_smaller"
                    android:text="@string/title_competitor_program_short"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/history_survey_competitor_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_circle_o"/>
            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:contentDescription="@string/text_divider"
        android:src="@color/stroke_card"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/content_vertical_margin_smaller"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/content_vertical_margin_smaller">

        <Button
            android:id="@+id/history_survey_reupload_btn"
            style="@style/Button.Transparent.Red"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:onClick="reUploadSurvey"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:text="@string/label_reupload"
            android:textAllCaps="true"
            android:visibility="visible"/>

        <ProgressBar
            android:id="@+id/history_survey_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="@dimen/progressbar_in_row_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:indeterminate="true"
            android:visibility="gone"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/row_history_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/content_vertical_margin_smaller_even"
            android:paddingTop="@dimen/content_vertical_margin_smaller_even"
            android:text="@string/hello_world"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:contentDescription="@string/text_divider"
        android:src="@color/stroke_card"/>

</LinearLayout>