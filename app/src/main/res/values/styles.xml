<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:typeface">serif</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
    </style>

    <style name="AppThemeNoActionBar" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:typeface">serif</item>
    </style>

    <style name="AppTheme.ActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/bg_action_bar</item>
        <item name="android:logo">@android:color/transparent</item>
    </style>

    <style name="TextPrimary" parent="android:TextAppearance">
        <item name="android:textColor">@color/text_dark_primary</item>
    </style>

    <style name="TextPrimary.Bold" parent="TextPrimary">
    <item name="android:textStyle">bold</item>
    </style>

    <style name="TextPrimary.Small" parent="android:TextAppearance.Small">
        <item name="android:textColor">@color/text_dark_primary</item>
    </style>

    <style name="TextPrimary.Medium" parent="android:TextAppearance.Medium">
        <item name="android:textColor">@color/text_dark_primary</item>
    </style>

    <style name="TextPrimary.Large" parent="android:TextAppearance.Large">
        <item name="android:textColor">@color/text_dark_primary</item>
    </style>

    <style name="TextSecondary" parent="android:TextAppearance">
        <item name="android:textColor">@color/text_dark_secondary</item>
    </style>

    <style name="TextSecondary.Small" parent="android:TextAppearance.Small">
        <item name="android:textColor">@color/text_dark_secondary</item>
    </style>

    <style name="TextLight" parent="android:TextAppearance">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="TextLight.Bold" parent="TextLight">
    <item name="android:textStyle">bold</item>
    </style>

    <style name="TextRed" parent="android:TextAppearance">
        <item name="android:textColor">@color/text_red</item>
    </style>

    <style name="TextRed.Small" parent="android:TextAppearance.Small">
        <item name="android:textColor">@color/text_red</item>
    </style>

    <style name="TextRed.Small.Bold" parent="TextRed.Small">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextCapital" parent="android:TextAppearance">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextSquare" parent="android:TextAppearance">
        <item name="android:width">@dimen/icon_button_radius_small</item>
        <item name="android:height">@dimen/icon_button_radius_small</item>
    </style>

    <style name="Button.Transparent" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_transparent</item>
    </style>

    <style name="Button.Transparent.Red" parent="Button.Transparent">
        <item name="android:textColor">@color/text_red</item>
        <item name="android:textAppearance">@android:style/TextAppearance</item>
    </style>

    <style name="Button.Transparent.Gray" parent="Button.Transparent">
        <item name="android:textColor">@color/text_dark_primary</item>
        <item name="android:textAppearance">@android:style/TextAppearance</item>
    </style>

    <style name="Button.Transparent.Red.Icon" parent="Button.Transparent">
        <item name="android:textColor">@color/text_red</item>
        <item name="android:textAppearance">@android:style/TextAppearance</item>
        <item name="android:layout_width">@dimen/icon_button_radius</item>
        <item name="android:layout_height">@dimen/icon_button_radius</item>
    </style>

    <style name="Button.Transparent.Gray.Icon" parent="Button.Transparent">
        <item name="android:textColor">@color/text_dark_primary</item>
        <item name="android:textAppearance">@android:style/TextAppearance</item>
        <item name="android:layout_width">@dimen/icon_button_radius</item>
        <item name="android:layout_height">@dimen/icon_button_radius</item>
    </style>

    <style name="Button.Red" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_red</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textAppearance">@android:style/TextAppearance</item>
    </style>

    <style name="Button.Outline.Red" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_outline_red</item>
        <item name="android:textColor">@color/btn_red_active</item>
        <item name="android:textAppearance">@android:style/TextAppearance</item>
    </style>

    <style name="Button.Outline.Grey" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_outline_grey</item>
        <item name="android:textColor">@color/text_dark_secondary</item>
        <item name="android:textAppearance">@android:style/TextAppearance</item>
    </style>

    <style name="Button.Red.Circle" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_circle_red</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textAppearance">@android:style/TextAppearance</item>
        <item name="android:layout_width">@dimen/icon_button_radius</item>
        <item name="android:layout_height">@dimen/icon_button_radius</item>
    </style>

    <style name="Button.Red.Circle.Small" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_circle_red</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:layout_width">@dimen/icon_button_radius_smaller</item>
        <item name="android:layout_height">@dimen/icon_button_radius_smaller</item>
    </style>

    <style name="Button.Green.Small" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_green</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
    </style>

    <style name="Button.Green" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_green</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textAppearance">@android:style/TextAppearance</item>
    </style>

    <style name="Button.Inline.Grey" parent="android:Widget.Button">
        <item name="android:layout_height">@dimen/btn_inline_height</item>
        <item name="android:background">@drawable/button_inline_grey</item>
        <item name="android:textColor">@color/text_dark_secondary</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
    </style>

    <style name="Button.Inline.Orange" parent="android:Widget.Button">
        <item name="android:layout_height">@dimen/btn_inline_height</item>
        <item name="android:background">@drawable/button_inline_orange</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
    </style>

    <style name="ToggleButtonEmpty" parent="android:Widget.Button.Toggle">
        <item name="android:textOff" />
        <item name="android:textOn" />
    </style>

    <style name="RowProductDetail">
        <item name="android:background">@color/white</item>

    </style>

</resources>
